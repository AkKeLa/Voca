<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="akkela.voca.test">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ask text"
        android:id="@+id/ask"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000"
        android:textSize="@dimen/abc_dropdownitem_icon_width"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_alignRight="@+id/answ1"
        android:layout_alignEnd="@+id/answ1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onBtnClick"
        android:text="answ1"
        android:id="@+id/answ1"
        android:layout_below="@+id/ask"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="answ2"
        android:onClick="onBtnClick"
        android:id="@+id/answ2"
        android:layout_below="@+id/answ1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/answ1"
        android:layout_alignEnd="@+id/answ1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="answ3"
        android:onClick="onBtnClick"
        android:id="@+id/answ3"
        android:layout_below="@+id/answ2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/answ2"
        android:layout_alignEnd="@+id/answ2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="answ4"
        android:onClick="onBtnClick"
        android:id="@+id/answ4"
        android:layout_below="@+id/answ3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/answ3"
        android:layout_alignEnd="@+id/answ3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:text="Sound"
        android:id="@+id/autoplay"
        android:textSize="20dp"
        android:checked="false"
        android:enabled="true"
        android:layout_above="@+id/progressBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:id="@+id/imageButton"
        android:src="@android:drawable/presence_audio_online"
        android:onClick="onBtnClick"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/autoplay"
        android:layout_alignRight="@+id/answ4"
        android:layout_alignEnd="@+id/answ4" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton" />

</RelativeLayout>
